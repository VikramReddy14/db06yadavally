extends layout

block content
  h1= title
  - let motels  = results;
  div(class="container-fluid mt-3 mystyle")
    - let create = `dispatch(\"/motels/create\")`
    button.btn(class="btn-secondary ml-1", onClick=create) Create New motel
    div(class="row m-1 paddingcustom")
      each motel,index in motels
        - let destination = `dispatch(\"/motels/update?id=${motel._id}\")` 
        - let detail = `dispatch(\"/motels/detail/?id=${motel._id}")`
        - let deleteItem = `dispatch(\"/motels/delete/?id=${motel._id}")`
        div(class="col-sm-5 values") #{motel.motelRatings} - #{motel.motelCost} - #{motel.motelFacility}
          button.btn( class="btn-primary buttonCustom", onclick= destination) Update
          button.btn( class="btn-success buttonCustom", onclick= detail) Details
          button.btn( class="btn-danger buttonCustom", onclick= deleteItem) Delete
    
    script.
      function buy(itemNo)
      {
        alert(`You purchased Item ${itemNo+1}`)
      }
      function dispatch(path){ 
        window.location.href=path 
      }